extends base

block content
    main.main
        .card-container

            each review in reviews

                .reviews__card
                    .reviews__avatar
                        //- img.reviews__avatar-img(src=`/img/users/${tour.imageCover}`, alt=``)
                        //- h6.reviews__user= tours.name

                    p.reviews__text= review.review
                    .reviews__rating
                        each star in [1, 2, 3, 4, 5]
                            svg.reviews__star(class=`reviews__star--${review.rating >= star ? 'active' : 'inactive' }`)
                                use(xlink:href='/img/icons.svg#icon-star')

                    a.btn.btn--green.span-all-rows(href='/edit-review') Edit Review